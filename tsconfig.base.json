{
  "compileOnSave": false,
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "baseUrl": ".",
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "useUnknownInCatchVariables": true,

    "allowArbitraryExtensions": true,
    "allowImportingTsExtensions": false,
    "allowUmdGlobalAccess": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": false,
    "rootDir": "",

    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "noEmitOnError": true,
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": true,

    "allowJs": true,
    "checkJs": true,

    "plugins": [
      { "name": "typescript-styled-plugin" },
      { "name": "typescript-eslint-language-service" }
    ],

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,

    "jsx": "react-jsx",
    "lib": ["ESNext"],
    "target": "ESNext",
    "useDefineForClassFields": true,

    "composite": true,
    "incremental": true,
    "importHelpers": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,

    "paths": {
      "@demo-ts/api-utils": ["libs/api-utils/src/index.mts"],
      "@demo-ts/data-processing": ["libs/data-processing/src/index.mts"],
      "@demo-ts/utilities": ["libs/utilities/src/index.mts"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "packages/*/dist",
    "packages/*/node_modules"
  ],
  "include": ["packages/**/*"],
  "references": [
    { "path": "./packages/serializable" },
    { "path": "./packages/roll" },
    { "path": "./packages/event-emitter" },
    { "path": "./packages/creature" },
    { "path": "./packages/dndbeyond-proxy" },
    { "path": "./packages/compendium-server" },
    { "path": "./packages/combat-tracker" },
    { "path": "./packages/event-emitter" }
  ]
}
